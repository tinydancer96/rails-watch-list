<div class="container">
  <div class="row">
      <div class="col-md-6">
        <div class="d-flex flex-column">
          <h1><%= @movie.title %></h1>
          <p><%= @movie.overview %></p>
          <p>Rating: <%= @movie.rating %>/10</p>
        </div>
      </div>
      <div class="col-md-6">
        <img src="<%= @movie.poster_url %>" alt="Movie Poster" class="img-fluid" style="height: 400px; width: 300px;">
      </div>
  </div>
</div>
