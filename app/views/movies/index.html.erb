<div class="container">
  <div class="row">
    <% @movies.each do |movie| %>
      <div class="col-md-6">
        <div>
          <h1><%= movie.title %></h1>
          <p><%= movie.overview %></p>
          <p>Rating: <%= movie.rating %>/10</p>
        </div>
      </div>
      <div class="col-md-6">
        <img src="<%= movie.poster_url %>" alt="Movie Poster" class="img-fluid" style="height: 80px; width: 50px;">
      </div>
    <% end %>
  </div>
</div>
