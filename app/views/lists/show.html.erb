<h1><%= @list.name %></h1>

<div class="container">
  <div class="row">
      <div class="col-md-6">
        <div class="d-flex flex-column">
          <% @list.movies.each do |movie|%>
          <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
            <h1><%= movie.title %></h1>
            <p><%= movie.overview %></p>
            <p>Rating: <%= movie.rating %>/10</p>
            <img src="<%= movie.poster_url %>" alt="Movie Poster" class="img-fluid" style="height: 400px; width: 300px;">
            <%= button_to "Delete this bookmark", list_bookmark_path(bookmark), method: :delete %>
          <% end %>
        </div>
      </div>
  </div>
</div>

<%= link_to "Back to lists", lists_path %>
<button><%= link_to "Add new movie", new_list_bookmark_path(@list) %></button>
